{
  "version": 2,
  "name": "nest",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**"],
        "buildCommand": "npm run build",
        "startCommand": "npm run start:prod",
        "outputDirectory": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/main.js"
    },
    {
      "src": "/(.*)",
      "dest": "dist/main.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "ENABLE_VERCEL_LOGGING": "true",
    "NEST_DEBUG": "true"
  },
  "build": {
    "env": {
      "ENABLE_VERCEL_LOGGING": "true",
      "NEST_DEBUG": "true"
    }
  }
}